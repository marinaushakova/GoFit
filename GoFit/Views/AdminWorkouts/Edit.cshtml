@model GoFit.Models.workout

@{
    ViewBag.Title = "Admin Edit Workout";
}

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal admin-form well col-md-6">
        <div class="row">
            <div class="admin_well_header">Edit Workout: @Model.name</div>
        </div>

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.timestamp)
        @Html.HiddenFor(model => model.created_at)

        <div class="form-group">
            @Html.LabelFor(model => model.name, "Workout Name", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.name, new { @class = "admin_textbox" })
                @Html.ValidationMessageFor(model => model.name, "Name required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.description, "Description", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.description, new { @class = "description_textarea" })
                @Html.ValidationMessageFor(model => model.description, "Description required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.category_id, "Category", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("category_id", null, String.Empty, new { @class = "drop_down" })
                @Html.ValidationMessageFor(model => model.category_id, "Category required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.created_by_user_id, "Created By", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("created_by_user_id", null, String.Empty, new { @class = "drop_down" })
                @Html.ValidationMessageFor(model => model.created_by_user_id, "User ID required")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "AdminWorkouts", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
