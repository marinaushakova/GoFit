@model GoFit.Models.workout
@using GoFit.Models
@*{ MvcHtmlString exerciseBlock = Html.ClientId("workoutExercise"); }*@

@Html.HiddenFor(m => m.id)
<div class="well workout_form col-md-6">
    <div class="form-group">
        <label class="control-label col-md-3">Workout Name</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.name, new { @class = "workout_textbox" })
            @Html.ValidationMessageFor(m => m.name)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3">Description</label>
        <div class="col-md-9">
            @Html.TextAreaFor(m => m.description, new { @class = "description_textarea" })
            @Html.ValidationMessageFor(m => m.description)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3">Category</label>
        <div class="col-md-9">
            @Html.DropDownListFor(model => model.category_id, (IEnumerable<SelectListItem>)ViewBag.Categories, new { @class = "drop_down" })
            @Html.ValidationMessageFor(model => model.category_id)
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-xs-12 add_exercise_list">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Exercises</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped" id="workoutExercise">
                    <thead>
                        <tr class="row">
                            <th class="col-md-6 col-xs-6">Exercise</th>
                            <th class="col-md-6 col-xs-6">Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.EditorFor(x => x.workout_exercise)
                    </tbody>
                </table>
                <p>
                    @Html.AddLink("Add Exercise", "#workoutExercise tbody", ".workoutExercise", "workout_exercise", typeof(GoFit.Models.workout_exercise))
                </p>
            </div>
        </div>
    </div>
</div>
    
