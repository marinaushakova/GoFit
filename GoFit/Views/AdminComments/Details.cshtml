@model GoFit.Models.comment

@{
    ViewBag.Title = "Admin Comment Details";
}

<h2>Comment Details from User: @Model.user.username</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.message, "Message", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.message)
        </dd>

        <dt>
            @Html.LabelFor(model => model.date_created, "Created", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date_created)
        </dd>

        <dt>
            @Html.LabelFor(model => model.user.username, "Username", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.username)
        </dd>

        <dt>
            @Html.LabelFor(model => model.workout.name, "Workout Name", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.workout.name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Delete", "Delete", new { id = Model.id }, htmlAttributes: new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Index", "AdminComments", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
