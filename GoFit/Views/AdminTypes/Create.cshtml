@model GoFit.Models.type

@{
    ViewBag.Title = "Admin Create Type";
}

<h2>Admin Create Type</h2>


<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal admin-form well col-md-6">
        <div class="row">
            <div class="admin_well_header">Create Type</div>
        </div>

        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.name, "Type Name", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">                
                @Html.TextBoxFor(model => model.name, new { @class = "admin_textbox" })
                @Html.ValidationMessageFor(model => model.name, "Type Name required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.measure, "Measured in", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">               
                 @Html.TextBoxFor(model => model.measure, new { @class = "admin_textbox" })
                @Html.ValidationMessageFor(model => model.measure, "Measure required")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "AdminTypes", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
