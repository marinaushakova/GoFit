@model GoFit.Models.type

@{
    ViewBag.Title = "Admin Delete Type";
}

<h2>Admin Delete Type</h2>

<h3>Are you sure you want to delete the type with measure: @Model.measure?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.name, "Type Name", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.LabelFor(model => model.measure, "Measure", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.measure)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.timestamp)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", "AdminTypes", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    }
</div>
