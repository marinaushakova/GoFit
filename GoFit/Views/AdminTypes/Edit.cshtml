@model GoFit.Models.type

@{
    ViewBag.Title = "Admin Edit Type";
}

<h2>Admin Edit Type: @Model.measure</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.timestamp)

        <div class="form-group">
            @Html.LabelFor(model => model.name, "Type Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name, "Type Name required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.measure, "Measure", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.measure)
                @Html.ValidationMessageFor(model => model.measure, "Measure required")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "AdminTypes", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
