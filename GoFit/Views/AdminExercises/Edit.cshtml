@model GoFit.Models.exercise

@{
    ViewBag.Title = "Admin Edit Exercise";
}

<h2>Admin Edit Exercise: @Model.name</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.timestamp)
        @Html.HiddenFor(model => model.created_at)

        <div class="form-group">
            @Html.LabelFor(model => model.name, "Exercise Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name, "Exercise Name required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.description, "Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.description)
                @Html.ValidationMessageFor(model => model.description, "Description required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.type_id, "Measured In Units", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("type_id", String.Empty)
                @Html.ValidationMessageFor(model => model.type_id, "Measure required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.created_by_user_id, "Created By", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("created_by_user_id", String.Empty)
                @Html.ValidationMessageFor(model => model.created_by_user_id, "User required")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.link, "Link", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.link)
                @Html.ValidationMessageFor(model => model.link)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
