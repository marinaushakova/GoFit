@model PagedList.IPagedList<GoFit.Models.exercise>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Admin Exercises";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Exercises</h2>

<p>
    <input class="btn btn-primary" type="button" value="Create New Exercise" onclick="location.href='@Url.Action("Create", "AdminExercises" )'" />
</p>
<br>
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2 class="panel-title">Listing Exercises...</h2>
        </div>

        <div class="panel-body">
            <div class="search_bar">
                <form action="/MyWorkouts" method="post" class="form-inline">
                    <div class="search_inputs form-group row">
                        <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                            <input class="" id="NameSearch" name="Name" type="text" value="@Session["NameSearchParam"]" placeholder="Workout name..." />
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                            <input class="" id="DescriptionSearch" name="Description" type="text" value="@Session["DescriptionSearchParam"]" placeholder="Description..." />
                        </div>
                        <div class="col-lg-2 col-md-1 col-sm-12 col-xs-12">
                            <input class="btn btn-primary" type="submit" value="Search" />
                        </div>
                    </div>
                </form>
            </div>
            <table class="workout_list table container-fluid">
                <thead>
                    <tr class="row">
                        <th class="col-xs-3">@Html.ActionLink("Created Date", "Index", new { sortBy = ViewBag.CreatedSortParam, filterString = ViewBag.FilterParam })</th>
                        <th class="col-xs-3">@Html.ActionLink("Link", "Index", new { sortBy = ViewBag.LinkSortParam, filterString = ViewBag.FilterParam })</th>
                        <th class="col-xs-3">@Html.ActionLink("Description", "Index", new { sortBy = ViewBag.DescriptionSortParam, filterString = ViewBag.FilterParam })</th>
                        <th class="col-xs-3">@Html.ActionLink("Timestamp", "Index", new { sortBy = ViewBag.TimestampSortParam, filterString = ViewBag.FilterParam })</th>
                        <th class="col-xs-3">@Html.ActionLink("Name", "Index", new { sortBy = ViewBag.NameSortParam, filterString = ViewBag.FilterParam })</th>
                        <th class="col-xs-3">@Html.ActionLink("Type", "Index", new { sortBy = ViewBag.TypeSortParam, filterString = ViewBag.FilterParam })</th>
                        <th class="col-xs-3">@Html.ActionLink("Username", "Index", new { sortBy = ViewBag.UsernameSortParam, filterString = ViewBag.FilterParam })</th>
                        <th class="col-xs-3">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="workout_name_cell col-xs-3">@Html.DisplayFor(modelItem => item.created_at)</td>
                            <td class="workout_name_cell col-xs-3">@Html.DisplayFor(modelItem => item.link)</td>
                            <td class="workout_name_cell col-xs-3">@Html.DisplayFor(modelItem => item.description)</td>
                            <td class="workout_name_cell col-xs-3">@Html.DisplayFor(modelItem => item.timestamp)</td>
                            <td class="workout_name_cell col-xs-3">@Html.DisplayFor(modelItem => item.name)</td>
                            <td class="workout_name_cell col-xs-3">@Html.DisplayFor(modelItem => item.type.name)</td>
                            <td class="workout_name_cell col-xs-3">@Html.DisplayFor(modelItem => item.user.username)</td>
                            <td class="workout_name_cell col-xs-3">
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
            <div class="pagination_container">
                @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>