@model IEnumerable<GoFit.Models.exercise>

@{
    ViewBag.Title = "Exercises";
}

<div class="row">
    <div class="col-md-4 col-xs-12 exercise_list">
        <div class="">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Exercises</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tbody>
                            @foreach (var exercise in Model)
                            {
                                <tr class="row">
                                    <td class="col-xs-12">@Html.DisplayFor(modelItem => exercise.name)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @{Html.RenderAction("ExerciseDetails", "Exercise", new { ex_id = ViewBag.Exercise_id });}

</div>
