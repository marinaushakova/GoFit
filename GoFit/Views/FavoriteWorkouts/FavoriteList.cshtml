@model IEnumerable<GoFit.Models.user_favorite_workout>

<div class="row">
<div class="col-md-4 col-xs-12 favorites_list">
    <div class="">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>My Favorite Workouts</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="row">
                                <td class="col-xs-12">@Html.ActionLink(item.workout.name, "../Home/Details", new { workoutId = item.workout_id })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            @Html.ActionLink("Manage My Favorites", "Index", new {}, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
</div>

