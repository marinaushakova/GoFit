@model GoFit.Models.comment


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">

        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Your comment:</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.message, new { @class = "comment_textarea" })
                @Html.ValidationMessageFor(model => model.message)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add comment" class="btn btn-primary" formaction='@Url.Action("AddComment", "Comments")' />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
