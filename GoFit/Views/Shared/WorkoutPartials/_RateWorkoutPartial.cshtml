@model GoFit.Models.workout     
@using (Html.BeginForm("AddWorkoutRating", "WorkoutRating"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal well">
            <div class="form-group">
                <label class="control-label col-md-2">Please, rate this workout:</label>
                @Html.TextBox("rating")
                <input id="workout_id" name="workout_id" type="hidden" value="@Model.id" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Rate" class="btn btn-primary"  />
                </div>
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
