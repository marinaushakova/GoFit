<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GoFit</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
        <link href="@Url.Content("~/Content/MyProfile.css")" rel="stylesheet" type="text/css" />
        @RenderSection("Styles", false)
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               @*@Html.ActionLink("GoFit", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.UserIsAdmin == true)
                    {
                        <li>@Html.ActionLink("Admin Home", "Index", "AdminHome")</li>
                        <li>@Html.ActionLink("Categories", "Index", "AdminCategories")</li>
                        <li>@Html.ActionLink("Comments", "Index", "AdminComments")</li>
                        <li>@Html.ActionLink("Exercises", "Index", "AdminExercises")</li>
                        <li>@Html.ActionLink("Types", "Index", "AdminTypes")</li>
                        <li>@Html.ActionLink("Workouts", "Index", "AdminWorkouts")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("MyProfile", "Index", "MyProfile")</li>
                        <li>@Html.ActionLink("MyWorkouts", "Index", "MyWorkouts")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="gofit-header">
            <a href="/" class="gofit-invis-link"></a>
        </div>
        @RenderBody()
        <hr />
        <footer class="gofit-footer">
            <p>&copy; @DateTime.Now.Year - GoFit &nbsp; | &nbsp; <a href="#top">Back to Top</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
