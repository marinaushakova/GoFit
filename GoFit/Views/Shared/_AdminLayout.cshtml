<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GoFit</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding-top:0;">
    <div class="navbar navbar-inverse">
        <div class="container">

            <div class="gofit-header">
                <a href="." class="gofit-invis-link"></a>
            </div>

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("GoFit", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Admin Home", "Index", "AdminHome")</li>
                    <li>@Html.ActionLink("Categories", "Index", "AdminCategories")</li>
                    <li>@Html.ActionLink("Exercises", "Index", "AdminExercises")</li>
                    <li>@Html.ActionLink("Types", "Index", "AdminTypes")</li>
                    <li>@Html.ActionLink("Workouts", "Index", "AdminWorkouts")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="gofit-footer">
            <p>&copy; @DateTime.Now.Year - GoFit</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
